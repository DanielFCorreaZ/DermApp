<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/contenedorPrincipal2"
    tools:context="com.danielcorrea.dermapp.Clasificacion">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white"
        android:orientation="vertical"

        tools:context="com.danielcorrea.doggergrill.clasi">


        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/azulito"
            android:textSize="40dp"
            android:text="@string/casi2"
            android:gravity="center"
            android:layout_height="100dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/down"
                android:id="@+id/down"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:id="@+id/est1"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:id="@+id/est2"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/est3"

                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:id="@+id/est4"
                android:layout_height="match_parent"

                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/est5"

                android:layout_weight="1"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/up"
                android:id="@+id/up"
                android:layout_weight="1"/>


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"></LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clas"
            android:textSize="30dp"
            android:background="@drawable/boton"
            android:id="@+id/calis"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/azulito"
            android:text="@string/casi3"
android:gravity="center"
            android:id="@+id/casi3"
            android:textSize="60dp"/>


    </LinearLayout>

    <ListView
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:id="@+id/menuIzq2"
        android:choiceMode="singleChoice"
        android:foregroundGravity="left"
        android:layout_gravity="start">
    </ListView>

</android.support.v4.widget.DrawerLayout>